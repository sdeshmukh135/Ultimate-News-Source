generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Stock {
  id       Int    @id @default(autoincrement())
  date String
  name String
  low String
  diffPercent String
  isPositive Boolean
}

model News {
 id       Int    @id @default(autoincrement())
 name String
 releaseDate String?
 category String[]
 articleURL String
 imageURL String?
 releasedAt DateTime
}